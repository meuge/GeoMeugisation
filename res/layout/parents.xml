    android:layout_height="fill_parent"
    android:padding="5dp" >
   
    	<TextView android:id="@+id/grp_parent"  android:layout_width="wrap_content"
		android:layout_height="45dip" android:gravity="center_vertical|right"
		android:paddingLeft="5dip" android:paddingRight="5dip"
